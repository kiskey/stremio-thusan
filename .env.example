# Addon Server Port
PORT=7000

# Einthusan Base URL
BASE_URL=

# --- REQUIRED: PostgreSQL Database Connection URL ---
DATABASE_URL=postgres://postgres:password@localhost:5432/stremio_addons

# --- REQUIRED: Scraping Configuration ---
MAX_PAGES_TO_SCRAPE=500

# --- NEW (Optional): Comma-separated list of proxy URLs for rotation ---
# Example: PROXY_URLS=http://proxy1.com/proxy,http://proxy2.com/proxy
# Leave blank to disable proxy rotation and make direct requests.
PROXY_URLS=

# --- Optional: Premium Credentials for HD Streams ---
EINTHUSAN_USERNAME=
EINTHUSAN_PASSWORD=

# --- Optional: Logging Level ---
LOG_LEVEL=debug

# REQUIRED: For enriching movie data with posters, ratings, etc.
# Get a free key from https://www.themoviedb.org/
TMDB_API_KEY=your_tmdb_api_key_here

## optional if set , it will skip full scrape, if set false will scrape full
SKIP_INITIAL_SCRAPE=true
